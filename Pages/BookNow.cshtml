@page
@model web_demo_cong_viec.Pages.BookNowModel
@{
    ViewData["Title"] = "Book now";
}

<link rel="stylesheet" href="~/css/bookNow.css" />

<div class="book-now-container">
    <div class="book-now-form-container">
        <form action="" method="post" enctype="multipart/form-data">

            @* Header *@
            <div class="book-now-form-header-container">
                <div class="row g-2">
                    <div class="col-sm-9">
                        <div>Lorem ipsum dolor sit amet </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="bg-container">
                            <div>$109/ <br>person</div>
                        </div>
                    </div>
                </div>
            </div>

            @* Body *@
            <div class="book-now-form-body-container">
                <div class="row g-3">

                    <div class="col-sm-6">
                        <div class="mb-3 book-now-forms">
                            <label for="fullName" class="form-label">Full name</label>
                            <input type="text" class="form-control" id="fullName">
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-3 book-now-forms">
                            <label for="Phone" class="form-label">Phone</label>
                            <input type="number" class="form-control" id="Phone">
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-3 book-now-forms">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email">
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-3 book-now-forms">
                            <label for="depature" class="form-label">Depature</label>
                            <input id="depature" class="form-control" type="date" />
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-3 book-now-forms">

                            <label class="form-label">Guests</label>
                            <select class="form-select" aria-label="Adults">
                                <option class="hidden_option" selected disabled>Adult</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>

                            <select class="form-select" aria-label="Childrens" style="margin-top: 10px;">
                                <option class="hidden_option" selected disabled>Kid</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-3 book-now-forms">
                            <label for="specialRequest" class="form-label">Special request</label>
                            <textarea class="form-control" id="specialRequest" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            @* Footer *@
            <div class="book-now-form-footer-container">
                <div class="separator"></div>
                <div class="row g-0 book-now-bottom-rows">

                    @* Children total *@
                    <span class="footer-text-container">
                        <div class="footer-text-left">Children total: </div>
                        <div class="footer-text-right">$0.00</div>
                    </span>

                    @* Adult total *@
                    <span class="footer-text-container">
                        <div class="footer-text-left">Adult total: </div>
                        <div class="footer-text-right">$0.00</div>
                    </span>

                    <div class="separator"></div>

                    @* Total *@
                    <span class="footer-text-container total">
                        <div class="footer-text-left">Total: </div>
                        <div class="footer-text-right">$0.00</div>
                    </span>
                </div>

                <button class="button-book-now" style="margin-top: 25px;">BOOK NOW</button>

                <div class="form-check form-check-mod">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        I agree to The Catba Catamaran
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>
