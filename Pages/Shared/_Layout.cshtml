<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web_demo_cong_viec</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/home.css" + DateTime.Now.ToString("ddMMHHmmss")" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
</head>

<body class="bg">
    <header>
        @* header-top *@
        <div class="header-top">
            <div class=" container d-flex align-items-center justify-content-between">

                <div class="header-top-left">
                    <ul class="header-top-left-list d-flex align-items-center my-2">
                        <li class="header-top-left-list-item me-3">
                            <a href="">
                                <img class="header-top-left-list-item header-bird" style="width: 23.5px; height: 14.5px"
                                    src="@Url.Content("~/images/icon/header-bird.png")" alt="ERROR">
                            </a>
                        </li>

                        <li class="header-top-left-list-item me-3">
                            <a href="">
                                <img style="width: 14.5px; height: 14.5px"
                                    src="@Url.Content("~/images/icon/header-camera.png")" alt="ERROR">
                            </a>
                        </li>

                        <li class="header-top-left-list-item me-3">
                            <a href="">
                                <img style="width: 7px; height: 13.5px"
                                    src="@Url.Content("~/images/icon/header-facebook.png")" alt="ERROR">
                            </a>
                        </li>

                        <li class="header-top-left-list-item me-3">
                            <a href="">
                                <img style="width: 11px; height: 13.5px"
                                    src="@Url.Content("~/images/icon/header-tiktok.png")" alt="ERROR">
                            </a>
                        </li>

                        <li class="header-top-left-list-item me-3">
                            <a href="">
                                <img style="width: 13px; height: 13.5px"
                                    src="@Url.Content("~/images/icon/header-whatsapp.png")" alt="ERROR">
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="header-top-right">
                    <ul class="header-top-right-list d-flex align-items-center">
                        <li class="header-top-right-list-item me-3">
                            @* phone Icon *@
                            <a class="item-link-header link-underline link-underline-opacity-0 text-light" href="#">
                                <i class="bi bi-telephone text-light"></i> (+84) 878 337 339
                            </a>
                        </li>

                        <li class="header-top-right-list-item me-3">
                            @* email Icon *@
                            <i class="bi bi-envelope text-light"></i>

                            <a class="item-link-header link-underline link-underline-opacity-0 text-light" href="#">
                                operator@catbacatamaran.com
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        @* Navigation bar *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="margin-bottom: 0 !important;">
            <div class="container">

                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img style="width: 253.5px; height: 40px"
                        src="@Url.Content("~/images/logo/catba-cataraman-dark.png")" alt="ERROR">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-flex flex-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link nav-link-text me-3" asp-area="" asp-page="/Index">HOME</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-text me-3" asp-area="" asp-page="/Cruise">THE CRUISE </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-text me-3" asp-area="" asp-page="/Itinerary">ITINERARY</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-text me-3" asp-area="" asp-page="/Contact">CONTACT US</a>
                        </li>

                        <li class="nav-item">
                            <a href="" class="nav-link text-dark me-3" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">Advice</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn-book-now text-light" asp-area=""
                                asp-page="/Contact">BOOK NOW</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>

        @* Modal *@
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" style="max-width: 900px; padding: 50px;">
                <div class="modal-content" id="modal-content1">
                    <div class="modal-header" id="modal-header1">
                        <h1 class="modal-title" id="exampleModalLabel">Ask for advice</h1>
                    </div>
                    <div class="modal-body" id="modal-body1">
                        <div style="margin-bottom: 30px;">We are happy to hear from you. You can fill out all
                            information in the form below, we will
                            respond to you as soon as possible.</div>
                        <div class="mb-3 ">
                            <input type="email" class="form-control pop-up-form" id="exampleFormControlInput1"
                                placeholder="Name">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control pop-up-form" id="exampleFormControlInput1"
                                placeholder="Phone*">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control pop-up-form" id="exampleFormControlInput1"
                                placeholder="Email*">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control pop-up-form" id="exampleFormControlInput1"
                                placeholder="Content need consultation">
                        </div>
                    </div>
                    <div class="modal-footer" id="modal-footer1">
                        <button id="pop-up-button" type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">CANCEL</button>
                        <button id="pop-up-button-2" type="button" class="btn btn-primary">SEND</button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>
           
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - web_demo_cong_viec - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
